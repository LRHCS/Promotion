{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8080/",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Promotion",
    "version": "1.1.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true, 
        "open": true, 
        "save": true 
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ],
      "identifier": "com.lrhcs.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/LRHCS/Promotion/releases/download/{{current_version}}/Promotion_1.0.1_x64-setup.exe"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1Q0Y3NjA2QUIzRTYzRjgKUldUNFl6NnJCbmJQUlFRREt1dWhVNFh0RHg3cFhabEU4RlRsQWw0M2NrSWQzQm5iWTgyUlZCK0MK",
      "windows": {
        "installMode": "passive"
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Promotion",
        "width": 825,
        "height": 1000
      }
    ]
  }
}
