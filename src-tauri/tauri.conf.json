{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Promotion",
    "version": "1.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico",
        "icons/icon.icns"
      ],
      "identifier": "com.lrhcs.dev",
      "targets": "all"
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://releases.myapp.com/{{target}}/{{arch}}/{{current_version}}"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1Q0Y3NjA2QUIzRTYzRjgKUldUNFl6NnJCbmJQUlFRREt1dWhVNFh0RHg3cFhabEU4RlRsQWw0M2NrSWQzQm5iWTgyUlZCK0MK"
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": false,
        "title": "Promotion",
        "width": 825,
        "height": 1000
      }
    ]
  }
}
